<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <logger name="uk.co.jemos.podam.api.PodamFactoryImpl" level="OFF"/>
    <logger name="com.aalzatea.commons.test.beans.generators.BeanGeneratorTest" level="INFO"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss.SSS} %green([%thread]) %highlight(%-5level) %yellow(%logger{50}) - %msg%n
            </Pattern>
        </layout>
    </appender>

    <root level="ERROR">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>